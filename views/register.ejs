<%- include('./include/_header') %>

    <main id ='site-register'>

        <form action="/auth/register" method="POST" class="register">
            
            <table class="table-register">
                <tr>
                    <th><h2>회원가입</h2></th>
                </tr>
                <tr><td>
                    <div>&nbsp;&nbsp;이름</div>
                    <input type="text" class="text-register" name="username">
                </td></tr>
                <tr><td>
                    <div>&nbsp;&nbsp;이메일</div>
                    <input type="text" class="text-register" name="email">
                </td></tr>
                <tr><td>
                    <div>&nbsp;&nbsp;비밀번호</div>
                    <input type="password" class="text-register" name="password">
                </td></tr>
                <tr><td>
                    <div>&nbsp;&nbsp;비밀번화 확인</div>
                    <input type="password" class="text-register" name="password2">
                </td></tr>

                <tr><th><input type="submit" value="가입하기" class="btn-register"></th></tr>
            </table>
        </form>
    </main>
    
<%- include('./include/_footer') %>