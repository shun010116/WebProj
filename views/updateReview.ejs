<% if (token) { %>
    <%- include('./include/_loginHeader') %>
  <% } else { %>
    <%- include('./include/_header') %>
  <% } %>
  
  <!-- Main -->
  <main id="site-main">
      <p> <h2>리뷰 수정</h2> </p>
      <br><br>
  
      <form action="/reviews/update/<%= restaurantId %>?_method=PUT&review_id=<%= reviewId %>" method="POST" id='add-review'>
        <table class="table-review">
          <tr><td>&nbsp;&nbsp;별점</td></tr>
  
          <tr><th>
            <div class="star-rating space-x-4 mx-auto">
              <input type="radio" id="5-stars" name="rating" value="5" v-model="ratings"/>
              <label for="5-stars" class="star pr-4">★</label>
              <input type="radio" id="4-stars" name="rating" value="4" v-model="ratings"/>
              <label for="4-stars" class="star">★</label>
              <input type="radio" id="3-stars" name="rating" value="3" v-model="ratings"/>
              <label for="3-stars" class="star">★</label>
              <input type="radio" id="2-stars" name="rating" value="2" v-model="ratings"/>
              <label for="2-stars" class="star">★</label>
              <input type="radio" id="1-star" name="rating" value="1" v-model="ratings" />
              <label for="1-star" class="star">★</label>
          </div>
          </th></tr>      
        </table>
  
        <br><br>
  
        <table class="table-writing">
          <tr><td>
            <div class="form-floating">
              <span>리뷰 내용</span>
              <textarea class="form-control" name="content" id="floatingTextarea2" style="height: 100px"></textarea>
  
            <tr><th><button type="submit" class="btn btn-warning">수정 완료</button></th></tr>
            </div>
          </td></tr>
        </table>
      </form>   
    </main>
  <!-- /Main -->
  
  <%- include('./include/_footer') %>